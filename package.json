{
  "name": "glacier-scan",
  "version": "1.0.0",
  "description": "AI-powered glacier analysis platform",
  "scripts": {
    "build": "npm run build:frontend && npm run build:backend",
    "build:backend": "cd backend/nestjs-api && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "db-status": "npm run verify-db",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:ai\"",
    "dev:ai": "cd backend/fastapi-ai && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "dev:backend": "cd backend/nestjs-api && npm run start:dev",
    "dev:frontend": "cd frontend && npm run dev",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:up": "docker-compose up -d",
    "health-check": "curl -s http://localhost:3000/api/health | jq",
    "reset-db": "npm run setup-db",
    "seed-data": "chmod +x scripts/002_run_fake_data.sh && ./scripts/002_run_fake_data.sh",
    "setup": "chmod +x scripts/setup-env.sh && ./scripts/setup-env.sh",
    "setup-db": "chmod +x scripts/setup-database.sh && ./scripts/setup-database.sh",
    "start-local": "chmod +x scripts/start-local.sh && ./scripts/start-local.sh",
    "test-db": "curl -s http://localhost:3000/api/test-db | jq",
    "verify-db": "chmod +x scripts/verify-database.sh && ./scripts/verify-database.sh"
  },
  "dependencies": {
    "@ai-sdk/openai": "latest",
    "@apollo/client": "latest",
    "@supabase/supabase-js": "latest",
    "@vercel/blob": "latest",
    "ai": "latest",
    "chart.js": "latest",
    "chartjs-adapter-date-fns": "latest",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "latest",
    "graphql": "latest",
    "graphql-ws": "latest",
    "i18next": "latest",
    "lucide-react": "^0.454.0",
    "maplibre-gl": "latest",
    "next": "15.2.4",
    "next-i18next": "latest",
    "react": "^19",
    "react-chartjs-2": "latest",
    "react-dom": "^19",
    "react-i18next": "latest",
    "subscriptions-transport-ws": "latest",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "zod": "latest"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^8.2.2",
    "postcss": "^8.5",
    "typescript": "^5"
  }
}